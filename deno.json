{
  "tasks": {
    "dev": "deno run -A npm:vite dev",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview"
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "unstable": ["fmt-component"]
  },
  "lint": {
    "include": ["src/**/*.{ts,js,svelte}"],
    "exclude": ["node_modules", ".svelte-kit", "dist", "build"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
        "@sveltejs/adapter-auto": "npm:@sveltejs/adapter-auto@^7.0.0",
        "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^6.2.1",
		"mdsvex": "npm:mdsvex@^0.12.6",
        "debug": "npm:debug@4.4.3",
        "runed": "npm:runed@0.37.0"
    }
}
